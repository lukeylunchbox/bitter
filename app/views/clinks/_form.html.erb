<%= simple_form_for(@clink) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
  <%= f.input :clink, label: "Clink about it", input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new clink..."%>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<%end%>